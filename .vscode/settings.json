{
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
      "extensions": [ ".js" ]
    }, 
    "eslint.validate": [
      "javascript"
    ],
    "[javascript]": {
      "editor.formatOnSave": false
    },
    "files.eol": "\n",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.fixAll.stylelint": true
    },
  }